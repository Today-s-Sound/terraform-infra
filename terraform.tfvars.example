# Terraform Variables Example
# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to git!

# Project Configuration
prefix     = "todays-sound"
project_id = "your-gcp-project-id"
region     = "asia-northeast3"
zone       = "asia-northeast3-a"

# Network Configuration
subnet_prefix = "10.0.10.0/24"

# Server Configuration
machine_type            = "e2-small"   # Monitoring server
main_server_machine_type = "e2-medium" # Main application server

# Application Configuration
environment = "prod"  # dev, qa, or prod

# Optional: Customize image placeholder (for demo app)
placeholder = "placekitten.com"
width       = "600"
height      = "400"
